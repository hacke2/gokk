extends ../layout

block content
	.container
		.row
			.col-md-10
				form.form-horizotal(method="post",action="/admin/movie/new")
					input(type="hidden",name="movie[id]",value="#{movie.id}")
					.form-group
						lable.col-sm-2.control-lable(for="inputDoctor") 分类
						.col-sm-10
							select.form-control(name="columnID")
								each column in columns
									option(value="#{column._id}") #{column.columnName}
					.form-group
						lable.col-sm-2.control-lable(for="inputTitle") 电影名字
						.col-sm-10
							input#inputTitle.form-control(type="text",name="movie[title]",value="#{movie.title}")
						lable.col-sm-2.control-lable(for="inputTitle") 观看地址
						.col-sm-10
							input#inputTitle.form-control(type="text",name="movie[url]",value="#{movie.url}")
					.form-group
						lable.col-sm-2.control-lable(for="inputDoctor") 主演
						.col-sm-10
							input#inputDoctor.form-control(type="text",name="movie[actor]",value="#{movie.actor}")
					.form-group
						lable.col-sm-2.control-lable(for="inputCountry") 国家
						.col-sm-10
							input#inputCountry.form-control(type="text",name="movie[country]",value="#{movie.country}")
					.form-group
						lable.col-sm-2.control-lable(for="inputPoster") 海报地址
						.col-sm-10
							input#inputPoster.form-control(type="text",name="movie[poster]",value="#{movie.poster}")
					.form-group
						lable.col-sm-2.control-lable(for="inputYear") 上映年代
						.col-sm-10
							input#inputYear.form-control(type="text",name="movie[year]",value="#{movie.year}")
					.form-group
						lable.col-sm-2.control-lable(for="inputSummary") 电影详情
						.col-sm-10
							textarea#inputSummary.form-control(name="movie[desc]") #{movie.desc}
					.form-group
						.col-sm-offset-2.col-sm-10
						button.btn.btn-primary(type="submit") 录入
